<enum-method-mappings>
	<!--
  This example changes the Java method:
    android.support.v4.app.Fragment.SavedState.writeToParcel (int flags)
  to be:
    android.support.v4.app.Fragment.SavedState.writeToParcel (Android.OS.ParcelableWriteFlags flags)
  when bound in C#.

  <mapping jni-class="android/support/v4/app/Fragment.SavedState">
    <method jni-name="writeToParcel" parameter="flags" clr-enum-type="Android.OS.ParcelableWriteFlags" />
  </mapping>

  Notes:
  - For Java interfaces, use "jni-interface" attribute instead of "jni-class" attribute.
  - To change the type of the return value, use "return" as the parameter name.
  - The parameter names will be p0, p1, ... unless you provide JavaDoc file in the project.
  -->
    <!--path="/api/package[@name='android.support.v7.widget']/class[@name='ActionBarContextView']/method[@name='setVisibility' and count(parameter)=1 and parameter[1][@type='int']]"-->
	<mapping jni-class="android/support/v7/widget/ActionBarContextView">
		<method jni-name="setVisibility" parameter="p0" clr-enum-type="Android.Views.ViewStates" />
	</mapping>

	<!--path="/api/package[@name='android.support.v7.view.menu']/class[@name='ActionMenuItem']/method[@name='setShowAsActionFlags' and count(parameter)=1 and parameter[1][@type='int']]"-->
	<mapping jni-class="android/support/v7/view/menu/ActionMenuItem">
		<method jni-name="setShowAsActionFlags" parameter="actionEnum" clr-enum-type="Android.Views.ShowAsAction" />
	</mapping>

	<!--path="/api/package[@name='android.support.v7.view.menu']/class[@name='MenuItemImpl']/method[@name='setShowAsActionFlags' and count(parameter)=1 and parameter[1][@type='int']]"-->
	<mapping jni-class="android/support/v7/view/menu/MenuItemImpl">
		<method jni-name="setShowAsActionFlags" parameter="actionEnum" clr-enum-type="Android.Views.ShowAsAction" />
	</mapping>
</enum-method-mappings>
